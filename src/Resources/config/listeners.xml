<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="staccato_listable.event_listener.session_filters" 
                 class="Staccato\Bundle\ListableBundle\EventListener\SessionFiltersListener" public="false">
            <argument type="service" id="staccato_listable.list_request" />
            <argument>%staccato_listable.config%</argument>

            <tag name="kernel.event_listener" event="kernel.request" />
        </service>
    </services>
</container>
