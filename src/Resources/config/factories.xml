<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="staccato_listable.repository_factory.class"
                 class="Staccato\Component\Listable\Repository\ClassRepositoryFactory" public="false">
            <tag name="staccato_listable.repository_factory" alias="class" />
        </service>

        <service id="staccato_listable.repository_factory.doctrine" 
                 class="Staccato\Component\Listable\Doctrine\Repository\ListableRepositoryFactory" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            
            <tag name="staccato_listable.repository_factory" alias="doctrine" />
        </service>
    </services>
</container>
