<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- twig extensions -->
        <service id="staccato_listable.twig.listable"
                 class="Staccato\Bundle\ListableBundle\Twig\Extension\ListableExtension" public="false">
            <tag name="twig.extension" />
        </service>

        <service id="staccato_listable.twig.listable_helpers"
                 class="Staccato\Bundle\ListableBundle\Twig\Extension\ListableHelpersExtension" public="false">
            <argument type="service" id="staccato_listable.helper.url_modifier" />
            
            <tag name="twig.extension" />
        </service>

        <!-- twig runtime -->
        <service id="staccato_listable.twig.renderer.table" 
                 class="Staccato\Bundle\ListableBundle\Twig\Renderer\TableBlockRenderer" public="false">
            <argument>%staccato_listable.config%</argument>

            <tag name="twig.runtime" />
        </service>

        <service id="staccato_listable.twig.renderer.box" 
                 class="Staccato\Bundle\ListableBundle\Twig\Renderer\BoxBlockRenderer" public="false">
            <argument>%staccato_listable.config%</argument>

            <tag name="twig.runtime" />
        </service>

        <service id="staccato_listable.twig.renderer.pagination" 
                 class="Staccato\Bundle\ListableBundle\Twig\Renderer\PaginationBlockRenderer" public="false">
            <argument>%staccato_listable.config%</argument>

            <tag name="twig.runtime" />
        </service>

        <service id="staccato_listable.twig.renderer.filters" 
                 class="Staccato\Bundle\ListableBundle\Twig\Renderer\FiltersBlockRenderer" public="false">
            <argument>%staccato_listable.config%</argument>
            
            <tag name="twig.runtime" />
        </service>
    </services>
</container>